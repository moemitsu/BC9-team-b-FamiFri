{
    "compilerOptions": {
      "target": "ES6",
      "lib": ["es2019", "dom"],
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "typeRoots": ["node_modules/@types"]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }
  